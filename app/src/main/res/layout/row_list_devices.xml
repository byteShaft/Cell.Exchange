<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#80000000"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_lv_devices_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:typeface="serif"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_lv_devices_model_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LPC"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_lv_devices_stock_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_lv_devices_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_lv_devices_storage_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_lv_devices_product_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_lv_devices_product_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:typeface="serif"/>
</LinearLayout>
